        <Button Content="6" Tag="6" Margin="119,154,0,0" Click="Button_Click1"/>
        <Button Content="7" Tag="7" Margin="29,109,0,0" Click="Button_Click1"/>
        <Button Content="8" Tag="8" Margin="74,109,0,0" Click="Button_Click1"/>
        <Button Content="9" Tag="9" Margin="119,109,0,0" Click="Button_Click1"/>
        
        <Button Content="Reset" Tag="Reset" HorizontalAlignment="Left" Margin="29,65,0,0" VerticalAlignment="Top" Width="174" Height="40" Click="reset_Click"/>
