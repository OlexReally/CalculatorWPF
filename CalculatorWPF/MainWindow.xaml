        <Button Content="0" Tag="0" Margin="74,244,0,0" Click="Button_Click1"/>
        <Button Content="1" Tag="1" Margin="29,199,0,0" Click="Button_Click1"/>
        <Button Content="2" Tag="2" Margin="74,199,0,0" Click="Button_Click1"/>
        <Button Content="3" Tag="3" Margin="119,199,0,0" Click="Button_Click1"/>
